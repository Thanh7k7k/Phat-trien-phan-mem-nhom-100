@model DemoMVC.Models.HeThongPhanPhoi

<h2>Thêm Hệ Thống Phân Phối</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Mã HTPP</label>
        <input asp-for="MaHTPP" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tên HTPP</label>
        <input asp-for="TenHTPP" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
